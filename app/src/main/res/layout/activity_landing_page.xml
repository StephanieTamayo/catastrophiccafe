<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#81d4fa"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="212dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/headerlogo" />

        <Button
            android:id="@+id/homebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:text="Home" />

        <Button
            android:id="@+id/aboutUsbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="About Us" />

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="Profile" />

    </LinearLayout>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.026" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/category1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:text="Iced Coffee"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cafeLatte"
                    android:layout_width="wrap_content"
                    android:layout_height="203dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="144dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:layout_marginTop="236dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        app:layout_constraintEnd_toStartOf="@+id/image2"
                        app:layout_constraintHorizontal_bias="0.457"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image1" />

                    <TextView
                        android:layout_width="144dp"
                        android:layout_height="46dp"
                        android:layout_gravity="bottom|center"
                        android:paddingLeft="1.1dp"
                        android:text="Cafe Latte"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cafeMocha"
                    android:layout_width="wrap_content"
                    android:layout_height="203dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="144dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:layout_marginTop="236dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.85"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image2" />

                    <TextView
                        android:layout_width="144dp"
                        android:layout_height="46dp"
                        android:layout_gravity="bottom|center"
                        android:paddingLeft="1.1dp"
                        android:text="Cafe Mocha"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/category2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:text="Hot Coffee"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                android:id="@+id/flatWhite"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="203dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="144dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="5dp"
                    android:layout_marginTop="52dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toStartOf="@+id/image4"
                    app:layout_constraintHorizontal_bias="0.457"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image1"
                    app:srcCompat="@drawable/image3" />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="46dp"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="1.1dp"
                    android:text="Flat White"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="203dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                android:id="@+id/espresso"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="144dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="5dp"
                    android:layout_marginTop="52dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image2"
                    app:srcCompat="@drawable/image4" />

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="46dp"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="1.1dp"
                    android:text="Espresso"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/category3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:lineSpacingExtra="24sp"
                android:text="Dry Cat Foods"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="203dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                    android:id="@+id/meowMix"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="144dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="5dp"
                    android:layout_marginTop="36dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toStartOf="@+id/image6"
                    app:layout_constraintHorizontal_bias="0.457"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image3"
                    app:srcCompat="@drawable/image5" />


                <TextView
                    android:layout_width="144dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="1.1dp"
                    android:text="Meow Mix Tender"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="203dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                android:id="@+id/MEOMackerel"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="144dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="5dp"
                    android:layout_marginTop="36dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image4"
                    app:srcCompat="@drawable/image6" />


                <TextView
                    android:layout_width="144dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="1.1dp"
                    android:text="ME-O Mackerel"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/category4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:text="Wet Cat Foods"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="203dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                android:id="@+id/nutrish"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="144dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="5dp"
                    android:layout_marginTop="36dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toStartOf="@+id/image6"
                    app:layout_constraintHorizontal_bias="0.457"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image6"
                    app:srcCompat="@drawable/image7" />


                <TextView
                    android:layout_width="144dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="1.1dp"
                    android:text="Rachel Ray Nutrish"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="203dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                android:id="@+id/whiskasTuna"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="144dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="5dp"
                    android:layout_marginTop="36dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image7"
                    app:srcCompat="@drawable/image8" />


                <TextView
                    android:layout_width="144dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="1.1dp"
                    android:text="Whiskas Tuna"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>

